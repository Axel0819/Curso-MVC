@{
    ViewData["Title"] = "Contacto";
}

<h1>Contáctanos:</h1>
<form asp-controller="Home" asp-action="Contact">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input class="form-control" id="nombre" name="nombre" placeholder="Digite su nombre"/>
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Digite su email"/>
    </div>

    <div class="mb-3">
        <label for="mensaje" class="form-label">Mensaje</label>
        <textarea class="form-control" id="mensaje" name="mensaje" rows="3"></textarea>
    </div>

    <button class="btn btn-primary">Enviar</button>
</form>
